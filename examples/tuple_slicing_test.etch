// Test tuple slicing with [m:M] syntax

fn test_basic_slice() {
    let t = (10, 20, 30, 40, 50);

    // Slice from index 1 to 3 (elements at indices 1 and 2)
    let s1: tuple[int, int] = t[1:3];
    let a: int = s1[0];
    let b: int = s1[1];

    discard a, b;
    print("Basic slice [1:3]: " + string(a) + ", " + string(b));
}

fn test_optional_start() {
    let t = (1, 2, 3, 4, 5);

    // Slice from beginning to index 3
    let s = t[:3];
    let a: int = s[0];
    let b: int = s[1];
    let c: int = s[2];

    discard a, b, c;
    print("Slice [:3]: " + string(a) + ", " + string(b) + ", " + string(c));
}

fn test_optional_end() {
    let t = (10, 20, 30, 40, 50);

    // Slice from index 2 to end
    let s: tuple[int, int, int] = t[2:];
    let a: int = s[0];
    let b: int = s[1];
    let c: int = s[2];

    discard a, b, c;
    print("Slice [2:]: " + string(a) + ", " + string(b) + ", " + string(c));
}

fn test_optional_both() {
    let t = (100, 200, 300);

    // Slice entire tuple with [:]
    let s: tuple[int, int, int] = t[:];
    let a: int = s[0];
    let b: int = s[1];
    let c: int = s[2];

    discard a, b, c;
    print("Slice [:]: " + string(a) + ", " + string(b) + ", " + string(c));
}

fn main() {
    test_basic_slice();
    test_optional_start();
    test_optional_end();
    test_optional_both();
}
