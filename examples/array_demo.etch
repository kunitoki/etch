fn main() -> void {
    // Array literal creation
    let numbers: array[int] = [1, 2, 3, 4, 5];

    // Array indexing
    let first: int = numbers[0];
    var last: int = numbers[rand(2, 0)];
    print(numbers[0]);
    print(numbers[4]);

    // Array slicing variations
    let slice1: array[int] = numbers[1:4];    // [2, 3, 4]
    let slice2: array[int] = numbers[2:];     // [3, 4, 5]
    let slice3: array[int] = numbers[:3];     // [1, 2, 3]
    let slice4: array[int] = numbers[:];      // [1, 2, 3, 4, 5] (full copy)

    // Nested arrays
    let matrix: array[array[int]] = [[1, 2], [3, 4]];
    let row: array[int] = matrix[0];
    let element: int = matrix[1][0];  // Should be 3
    print(element);

    // String arrays
    let words: array[string] = ["hello", "world", "etch"];
    let greeting: string = words[0];
}