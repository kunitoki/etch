// Test coroutine with conditional yields
fn filter_evens(n: int) {
    var i = 0;
    while i < n {
        if i % 2 == 0 {
            yield i;
        }
        i = i + 1;
    }
    return i;
}

fn main() {
    let evens = spawn filter_evens(10);

    match resume evens {
        ok(v0) => {
            print("Even: ");
            print(v0);
